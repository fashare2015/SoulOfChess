<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/common_background"
    >

    <include layout="@layout/title_bar"/>

    <com.example.fashare.soulofchess.view.ChessBoardView
        android:id="@+id/cbv"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@android:color/white"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:id="@+id/select_black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:src="@drawable/black_large"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我方"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_empty"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/left_bulb"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:src="@drawable/bulb"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/pk"/>

            <ImageView
                android:id="@+id/right_bulb"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:src="@drawable/bulb"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:src="@drawable/white_large"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="敌方"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--<Button-->
        <!--android:id="@+id/btn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="set"/>-->

    <!--<Button-->
        <!--android:id="@+id/begin"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="begin"/>-->


</LinearLayout>
